# Copy this file to .env and add your API keys

# ============================================================================
# FREE CLOUD PROVIDERS (tens of thousands of requests/day)
# ============================================================================

# Groq (14,400 requests/day)
# Get yours at: https://console.groq.com/
GROQ_API_KEY=your_groq_key_here

# Cerebras (14,400 requests/day)
# Get yours at: https://cloud.cerebras.ai/
CEREBRAS_API_KEY=your_cerebras_key_here

# Google Gemini (1,500 requests/day)
# Get yours at: https://aistudio.google.com/
GEMINI_API_KEY=your_gemini_key_here

# OpenRouter (free models available)
# Get yours at: https://openrouter.ai/
OPENROUTER_API_KEY=your_openrouter_key_here

# GitHub Models (free tier)
# Get yours at: https://github.com/marketplace/models
GITHUB_TOKEN=your_github_token_here

# HuggingFace (free inference)
# Get yours at: https://huggingface.co/settings/tokens
HUGGINGFACE_TOKEN=your_hf_token_here

# ============================================================================
# LOCAL PROVIDERS (no API keys needed)
# ============================================================================

# Ollama (default: http://localhost:11434)
OLLAMA_URL=http://localhost:11434

# LM Studio (default: http://localhost:1234)
LMSTUDIO_URL=http://localhost:1234

# llama.cpp (default: http://localhost:8080)
LLAMACPP_URL=http://localhost:8080

# ============================================================================
# PAID FALLBACK PROVIDERS
# ============================================================================

# Anthropic Claude
# Get yours at: https://console.anthropic.com/
ANTHROPIC_API_KEY=your_claude_key_here

# Moonshot.ai (Kimi)
# Get yours at: https://platform.moonshot.cn/
MOONSHOT_API_KEY=your_moonshot_key_here

# ============================================================================
# PROVIDER PREFERENCES
# ============================================================================

# Default provider (or "auto" for automatic selection)
DEFAULT_PROVIDER=groq

# Prefer free providers over paid
PREFER_FREE=true

# Include local providers in auto-selection
INCLUDE_LOCAL=true

# Enable paid providers as fallback
ENABLE_PAID_FALLBACK=false
